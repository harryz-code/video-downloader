{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "python railway_app.py",
    "healthcheckPath": "/health",
    "restartPolicyType": "ON_FAILURE"
  },
  "nixpacksConfig": {
    "phases": {
      "setup": {
        "nixPkgs": ["python3", "pip"]
      },
      "install": {
        "cmds": ["pip install --no-cache-dir -r requirements.txt"]
      }
    }
  }
}
